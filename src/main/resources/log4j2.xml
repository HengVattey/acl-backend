<?xml version="1.0" encoding="UTF-8" ?>

<Configuration>
    <Properties>
<!--        <Property name="LOG_PATH" value="/opt/tomcat/logs/sms"/>-->
        <Property name="LOG_PATH" value="C:\apache-tomcat-10.1.42\logs\acl-log"/>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-32.32logger{32} - %msg%n" />
        </Console>
        <RollingFile name="RollingFile"
                     fileName="${LOG_PATH}\acl.log"
                     filePattern="${LOG_PATH}\acl.%d{yyyy-MM-dd}.%i.log.gz">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-32.32logger{32} - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
